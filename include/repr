#pragma once
#include <string>

#include <librepr/type_info.h>
#include <librepr/object_info.h>
#include <librepr/repr.h>

#include <type_traits>

namespace librepr {
struct ReprWrapper {
  template <typename T>
  auto operator()(T const& obj) const -> librepr::ObjectInfo<T> {
    //TODO this could be static once msvc supports it
    return librepr::ObjectInfo<T>{obj};
  }
};


}  // namespace librepr


inline constexpr librepr::ReprWrapper repr {};

template <typename T>
inline constexpr librepr::TypeName<T> nameof {};